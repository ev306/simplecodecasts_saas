<h2 class="col-md-offset-2 form-group">Welcome! Want to be part of our community? Please sign up below.</h2>

<div class="row">
  <div class="text-center">
  <% if params[:plan] == '2'%>
      <h1>Professional Membership</h1>
      <h4>Go Pro and get full access for only $10 per month!</h4>
  <% else%>
       <h1>Basic Membership</h1>
       <h4>Sign up for free and get basic access to the commnunity.</h4>
 <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      
      <% if params[:plan] == '2'%>
      <%= render "pro_form"%>
      <% else %>
      <%= render "basic_form"%>
     <% end %>
        
      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>